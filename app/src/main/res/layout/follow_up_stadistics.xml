<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="120dp"
        android:layout_height="120dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/card_background"
        android:gravity="center">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium" />

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/icon_lightning" />

        <TextView
            android:id="@+id/valueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="673"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="120dp"
        android:layout_height="120dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/card_background"
        android:gravity="center">

        <TextView
            android:id="@+id/titleTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tiempo"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium" />

        <ImageView
            android:id="@+id/iconImageView2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/icon_clock" />

        <TextView
            android:id="@+id/valueTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="1:40"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="120dp"
        android:layout_height="120dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/card_background"
        android:gravity="center">

        <TextView
            android:id="@+id/titleTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERFECTO"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium" />

        <ImageView
            android:id="@+id/iconImageView3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/icon_target" />

        <TextView
            android:id="@+id/valueTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="100%"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="sans-serif" />
    </LinearLayout>

</LinearLayout>