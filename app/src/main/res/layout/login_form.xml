<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#000000"
    android:gravity="center_horizontal">

    <!-- Título -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROCKET ENGLISH"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:layout_marginTop="110dp"/>

    <!-- Subtítulo y EditText para Nombre -->
    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/edit_text" />

    <!-- Subtítulo y EditText para Alias -->
    <TextView
        android:id="@+id/textAlias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alias"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <EditText
        android:id="@+id/editTextAlias"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/edit_text" />

    <!-- Subtítulo y Spinner para País -->
    <TextView
        android:id="@+id/textCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="País"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <Spinner
        android:id="@+id/editTextCountry"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp" />


    <!-- Botón "Empezar" -->
    <Button
        android:id="@+id/btnStart"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="EMPEZAR"
        android:textSize="25sp"
        android:backgroundTint="@color/selectedAnswer"
        android:layout_marginTop="32dp"
        android:textColor="@color/black"/>

    <!-- Texto "Powered by RC Software" -->
    <TextView
        android:id="@+id/footerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered by RC Software"
        android:textSize="12sp"
        android:layout_marginTop="32dp"
        android:gravity="center" />

</LinearLayout>
