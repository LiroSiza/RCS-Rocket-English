<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/purple"/> <!-- Color cuando está presionado -->
            <corners android:radius="4dp"/> <!-- Menos borde redondeado -->
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/purple"/> <!-- Color cuando está habilitado -->
            <corners android:radius="24dp"/> <!-- Menos borde redondeado -->
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/purple"/> <!-- Color cuando está deshabilitado -->
            <corners android:radius="4dp"/> <!-- Menos borde redondeado -->
        </shape>
    </item>
</selector>